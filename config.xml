<?xml version='1.0' encoding='utf-8'?>
<widget id="com.momentum.amexMR25" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>amexMR25</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="justin.wallace@momentumww.com">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <!-- Allow links to amex.com -->
    <allow-navigation href="*://*.americanexpress.com/*" />
    <allow-navigation href="*://*.extra.americanexpress.com/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
